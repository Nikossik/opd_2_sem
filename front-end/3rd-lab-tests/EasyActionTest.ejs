    // Запускаем функцию отрисовки кадра и кругов
    drawFrame();
    drawCircles();

    // Запускаем движение круга
    moveCircle();

    // Запускаем таймер
    const selectedTime = document.getElementById("time-select").value;
    const endTime = new Date().getTime() + (selectedTime * 1000);
