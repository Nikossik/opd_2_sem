<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="./AdminRegistrationStyles.css">
  <title>Admin registration</title>
  <style>
    body {
    background-image: url('images/background_gradient.png');
    background-size: cover; 
    background-position: center; 
    }
  </style>
</head>

<body>
  <div class="menu-wrap">
    <input type="checkbox" class="toggler">
    <div class="main-menu-icon"><div></div></div>
    <div class="menu">
        <div>
            <div>
                <ul>
                    <li><a href="/">ДОМАШНЯЯ СТРАНИЦА</a></li>

                    <% if (!loggedIn) { %>
                        <li><a href="/login">ВОЙТИ</a></li>
                    <% } %>
                
                    <% if (loggedIn) { %>
                        <li><a href="/characteristics">ПРОФЕССИИ</a></li>
                    <% } %>
                
                    <% if (adminUser) { %>
                        <li><a href="/poll_1_part_1">ОПРОС</a></li>
                    <% } %>
                    
                    <% if (adminUser) { %>
                        <li><a href="/polls_results">РЕЗУЛЬТАТЫ ТЕСТИРОВАНИЯ</a></li>
                    <% } %>
                    <% if (adminUser) { %>
                        <li><a href="/adminRegister">ДОБАВИТЬ АДМИНА</a></li>
                    <% } %>
<!--                        <% if (adminUser) { %>-->
<!--                            <li><a href="/create_invite">ССЫЛКА-ПРИГЛАШЕНИЕ</a></li>-->
<!--                        <% } %>-->
                    <% if (loggedIn) { %>
                        <li><a href="/adminPage">ЭКСПЕРТЫ</a></li>
                    <% } %>
                    <% if (loggedIn) { %>
                        <li><a href="/logout">ВЫЙТИ</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>

  <section class="container">
    <h1>Регистрация Администратора</h1>
    <form id="login-form" method="POST" action="/adminRegister">
      <input type="text" name="login" id="user-name" placeholder="Login" required class="input">
      <input type="password" name="password" id="user-password" placeholder="Password" required class="input">
      <div class="form-group">
        <label for="id-select">Возраст</label>
        <select class="select-style" name="age" id="id-select"></select>
      </div>
      <div class="form-group">
        <label for="id-sex">Пол:</label>
        <div class="select-wrapper">
          <select class="select-style" name="sex" id="id-sex">
            <option value="m">Мужчина</option>
            <option value="f">Женщина</option>
          </select>
        </div>
      </div>
      <button class="first-button" type="submit" id="register">Создать аккаунт</button>
    </form>
    <div id="error-message">
      <% if (errorMessage) { %>
        <p class="error-message"><%= errorMessage %></p>
      <% } %>
    </div>
  </section>

  <script>
    const ageSelect = document.getElementById("id-select");
    for (let i = 18; i <= 45; i++) {
      const option = document.createElement("option");
      option.value = i;
      option.textContent = i;
      ageSelect.appendChild(option);
    }
  </script>
</body>
</html>